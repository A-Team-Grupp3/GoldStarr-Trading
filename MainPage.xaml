                            </RelativePanel>

                        </StackPanel>
                    </RelativePanel>
                </Grid>
            </PivotItem>-->
            <!--#endregion-->



            <!--TODO: All Done :)-->
            <PivotItem Header="Deliveries"  Margin="10,0,10,10">

                <Grid Background="White">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>


                    <TextBlock  x:Name="DeliverysPanelHeader" Text="Incoming Delivery's" 
                                Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="20"
                                FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" TextDecorations="Underline"/>

                    <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="10">

                        <ListViewHeaderItem>
                            <Grid>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Supplier" Grid.Row="1" Grid.Column="1"/>
                                <TextBlock Text="Item" Grid.Row="1" Grid.Column="2"/>
                                <TextBlock Text="Qty" Grid.Row="1" Grid.Column="3"/>
                                <TextBlock Text="Add Qty" Grid.Row="1" Grid.Column="4" Margin="65,0,0,0"/>

                            </Grid>
                        </ListViewHeaderItem>

                        <ListView x:Name="StockToAddList" ItemsSource="{x:Bind _app.GetDefaultDeliverysList()}" BorderBrush="Black" BorderThickness="1" SelectionMode="None">
                            <!--Remove ( SelectionMode="None" ) to make list clickable-->
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <RelativePanel Margin="15">
                                        <Grid>
                                            
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Supplier}" Margin="10,0,0,0" Grid.Column="0"/>
                                            <TextBlock x:Name="ItemName" Text="{Binding ItemName}" Margin="10,0,0,0" Grid.Column="1"/>
                                            <TextBlock x:Name="QTY" Text="{Binding Qty}" Margin="20,0,0,0" Grid.Column="2"/>
                                            <TextBox x:Name="TxtBoxAddQty" RelativePanel.RightOf="QTY" Margin="50,0,0,0" Grid.Column="3"/>
                                            <Button x:Name="BtnAdd" RelativePanel.RightOf="TxtBoxAddQty" Content="Add" 
                                                    Click="BtnAddDeliveredMerchandise_Click" Margin="10,0,0,0" Grid.Column="4"
                                                    Command="{Binding ElementName=StockToAddList, Path=DataContext.AddButtonCommand}"/>

                                        </Grid>
                                    </RelativePanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>
                </Grid>
            </PivotItem>


            <!--TODO: All Done :)-->
            <PivotItem Header="Pending Orders"  Margin="10,0,10,10">

                <Grid Background="White">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>


                    <TextBlock  x:Name="PendingOrdersPanelHeader" Text="Pending Customer Orders" 
                                Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="20"
                                FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" TextDecorations="Underline"/>

                    <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="10">

                        <ListViewHeaderItem>
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Customer" Grid.Row="1" Grid.Column="1"/>
                                <TextBlock Text="Item" Grid.Row="1" Grid.Column="2"/>
                                <TextBlock Text="Qty" Grid.Row="1" Grid.Column="3"/>
                                <TextBlock Text="Send order" Grid.Row="1" Grid.Column="4" Margin="65,0,0,0"/>

                            </Grid>
                        </ListViewHeaderItem>

                        <ListView x:Name="PendingOrdersList" ItemsSource="{x:Bind _app.QueuedOrders}" BorderBrush="Black" BorderThickness="1" SelectionMode="Single">
                            <!--Remove ( SelectionMode="None" ) to make list clickable-->
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <RelativePanel Margin="15">
                                        <Grid>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock x:Name="PendingOrdersCustomerName" Text="{Binding Customer.CustomerName}" Margin="10,0,0,0" Grid.Column="0"/>
                                            <TextBlock x:Name="PendingOrdersItemName" Text="{Binding Merchandise.ItemName}" Margin="10,0,0,0" Grid.Column="1"/>
                                            <TextBlock x:Name="PendingOrdersQTY" Text="{Binding Merchandise.Qty}" Margin="20,0,0,0" Grid.Column="2"/>
                                            <Button x:Name="PendingOrdersBtnSend" RelativePanel.RightOf="PendingOrdersQTY" Content="Send order" Width="100"
                                                    Click="PendingOrdersBtnSend_Click" Margin="75,0,0,0" Grid.Column="4"
                                                    Command="{Binding ElementName=StockToAddList, Path=DataContext.AddButtonCommand}"/>

                                        </Grid>
                                    </RelativePanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>

                    <Button x:Name="PendingOrdersBtnSendAll" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" Content="Send All" Width="100"
                            Click="PendingOrdersBtnSendAll_Click" Margin="0,0,38,0"/>

                </Grid>
            </PivotItem>


